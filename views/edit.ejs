<% include partials/header.ejs %>

<div class="ui container segment">

    <h2 class="ui icon header">
      <i class="edit icon"></i>
      <div class="content">Edit your post!</div>
    </h2>
    <form action="/news/<%=tech._id%>?_method=PUT"method="POST" class="ui form">
      <div class="field">
        <div class="ui input ">
          <input
            type="text"
            name="tech[author]"
            value="<%=tech.author%>"
          />
        </div>
      </div>

      <div class="field">
        <div class="ui input ">
          <input type="text" name="tech[title]" value="<%=tech.title%>" />
        </div>
      </div>
      <div class="field">
        <div class="ui input ">
          <textarea
            name="tech[content]"
            id=""
           
            cols="30"
            rows="10"
          ><%=tech.content%></textarea>
        </div>
      </div>
      <div class="field">
        <div class="ui input ">
          <input
            type="link"
            name="tech[image]"
            value="<%=tech.image%>"
          />
        </div>
      </div>

      <div class="field">
        <div class="ui labeled input">
          <div class="ui label">http://</div>
          <input type="text"  value="<%=tech.source%>" />
        </div>
      </div>
      <a href="/news">
        <button class="ui inverted teal button">
          <i class="edit icon"></i> Create post
        </button>
      </a>
    </form>
  </div>
</div>
